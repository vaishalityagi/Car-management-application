        <div class="mb-3">
            Original Images
        <% if (listing.image.length > 1) { %>
          <!-- Carousel for multiple images -->
          <div id="listingImageCarousel<%= listing._id %>" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% listing.image.forEach((image, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <img src="<%= image.url %>" class="card-img-top" alt="Listing Image" style="height: 10rem; width: 100%; object-fit: cover; margin-bottom: 5px;">
                </div>
              <% }) %>
            </div>
            <!-- Controls for navigating the carousel -->
            <button class="carousel-control-prev" type="button" data-bs-target="#listingImageCarousel<%= listing._id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#listingImageCarousel<%= listing._id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        <% } else if (listing.image.length === 1) { %>
          <!-- Display single image if only one image exists -->
          <img src="<%= listing.image[0].url %>" class="card-img-top" alt="Listing Image" style="height: 10rem; width: 100%; object-fit: cover; margin-bottom: 5px;">
        <% } %>
      </div>
          
        <div class="mb-3">
            <label for="image" class="form-label">Upload new Image</label>
            <input name="listing[image]" type="file" class="form-control" >

         </div>

        <!-- <br /><br /> -->

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter the valid price.
                  </div>
             </div>
            <!-- <br /><br /> -->
            <div class="mb-3 col-md-8">
                <label for="company" class="form-label">Company</label>
                <input name="listing[company]" value="<%= listing.company %>" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter the valid company name.
                  </div>
             </div>
        </div>
        
        <!-- <br /><br /> -->
        <div class="mb-3">
            <label for="dealer" class="form-label">Dealer</label>
            <input name="listing[dealer]" value="<%= listing.dealer %>" type="text" class="form-control" required >
            <div class="invalid-feedback">
                Please enter the valid Dealer.
              </div>
         </div>
         <div class="mb-3">
            <label for="cartype" class="form-label">CarType</label>
            <input name="listing[cartype]" value="<%= listing.cartype %>" type="text" class="form-control" required >
            <div class="invalid-feedback">
                Please enter the valid CarType.
              </div>
         </div>
        <br /><br />
        <button class="btn btn-dark add-btn " >EDIT</button>
    </form>
</div>
</div>
</body>
